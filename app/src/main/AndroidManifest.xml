<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 앱 사용 통계 권한 -->
    <uses-permission android:name="android.permission.PACKAGE_USAGE_STATS" 
        tools:ignore="ProtectedPermissions" />
    
    <!-- 포그라운드 서비스 권한 -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_SPECIAL_USE" />
    
    <!-- 시스템 경고창 권한 (오버레이) -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>
    
    <!-- 알림 권한 -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    
    <!-- 앱 목록 쿼리 권한 (Android 11+) -->
    <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES" 
        tools:ignore="QueryAllPackagesPermission" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TurnOffApp"
        tools:targetApi="31">
        
        <!-- 메인 액티비티 -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.TurnOffApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 차단 화면 액티비티 -->
        <activity
            android:name=".BlockActivity"
            android:exported="false"
            android:theme="@style/Theme.TurnOffApp"
            android:launchMode="singleTop"
            android:excludeFromRecents="true" />

        <!-- 앱 선택 액티비티 -->
        <activity
            android:name=".AppSelectionActivity"
            android:exported="false"
            android:theme="@style/Theme.TurnOffApp" />

        <!-- 스케줄 관리 액티비티 -->
        <activity
            android:name=".ScheduleActivity"
            android:exported="false"
            android:theme="@style/Theme.TurnOffApp" />

        <!-- 스케줄 편집 액티비티 -->
        <activity
            android:name=".EditScheduleActivity"
            android:exported="false"
            android:theme="@style/Theme.TurnOffApp" />

        <!-- 스케줄용 앱 선택 액티비티 -->
        <activity
            android:name=".ScheduleAppSelectionActivity"
            android:exported="false"
            android:theme="@style/Theme.TurnOffApp" />

        <!-- 앱 차단 서비스 -->
        <service
            android:name=".FocusService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="specialUse">
            <property
                android:name="android.app.PROPERTY_SPECIAL_USE_FGS_SUBTYPE"
                android:value="digital_wellbeing" />
        </service>

        <!-- 스케줄 모니터링 서비스 -->
        <service
            android:name=".ScheduleMonitorService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="specialUse">
            <property
                android:name="android.app.PROPERTY_SPECIAL_USE_FGS_SUBTYPE"
                android:value="digital_wellbeing" />
        </service>

        <!-- 웹사이트 차단을 위한 접근성 서비스 -->
        <service
            android:name=".WebsiteBlockerService"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE"
            android:label="@string/accessibility_service_label"
            android:exported="false">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service_config" />
        </service>

        <!-- 집중 모드 설정 액티비티 -->
        <activity
            android:name=".FocusModeActivity"
            android:exported="false"
            android:theme="@style/Theme.TurnOffApp" />

    </application>

</manifest>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- 집중모드 이름 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="집중모드 이름"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/et_focus_mode_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="예: 공부, 업무, 독서"
            android:inputType="text"
            android:layout_marginBottom="16dp" />

        <!-- 집중시간 설정 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="집중시간"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/rg_duration_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="8dp">

            <RadioButton
                android:id="@+id/rb_unlimited"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="무제한" />

            <RadioButton
                android:id="@+id/rb_timed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시간 설정" />

        </RadioGroup>

        <LinearLayout
            android:id="@+id/layout_duration_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/et_duration"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="25"
                android:inputType="number"
                android:maxLength="3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="분"
                android:textSize="16sp"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- 휴식시간 설정 -->
        <CheckBox
            android:id="@+id/cb_allow_breaks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="휴식시간 허용"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:id="@+id/layout_break_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="16dp">

            <!-- 휴식 간격 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="휴식 간격: "
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_break_interval"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="30"
                    android:inputType="number"
                    android:maxLength="3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="분마다"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <!-- 휴식 시간 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="휴식 시간: "
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_break_duration"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="5"
                    android:inputType="number"
                    android:maxLength="2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="분"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- 차단할 앱 선택 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="차단할 앱"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_select_apps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="앱 선택"
                android:textSize="14sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_selected_apps_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="선택된 앱: 0개"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="16dp" />

        <!-- 차단할 웹사이트 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="차단할 웹사이트"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_manage_websites"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="웹사이트 관리"
                android:textSize="14sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_selected_websites_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="선택된 웹사이트: 0개"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="24dp" />

        <!-- 버튼들 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="취소"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn_save"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="저장"
                android:layout_marginStart="8dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>